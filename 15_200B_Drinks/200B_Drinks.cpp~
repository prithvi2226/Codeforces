#include<iostream>
#include<cmath>
#include<cstdlib>
#include<string>
#include<cstring>

using namespace std;

int main(){
	int n, i;
	cin >> n;

	int array[n];
	int no = 0;

	for(i = 0; i < n; i++){
		
		cin >> array[i];		
		no = array[i] + no;
	}

	//cout << no;

	float x;
	double bruh;

	x = (float)no/100;
	cout << x;

	bruh = x/n;

	bruh = bruh *100;
	
	//cout << bruh << endl;


	

	return 0;

}





